<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.Fragment_tv_series">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/topratedtvseries"
            android:background="#000000"
            android:fontFamily="casual"
            android:gravity="center"
            android:text="@string/top_rated_tv_series"
            android:textColor="#EEFFFFFF"
            android:textSize="@dimen/title_size" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycle_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/activity_vertical_item">

        </android.support.v7.widget.RecyclerView>

        <ProgressBar
            android:id="@+id/progress_tv_series"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>


</FrameLayout>